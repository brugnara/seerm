<!DOCTYPE html>
<html>
{{template "head"}}
<body>
  {{template "navbar" .}}
  {{template "hero" "New customer|This one is special, please, tell me more"}}

  <section class="section">
    <div class="content">
      <form method="post">

        <div class="field">
          <label class="label">Name</label>
          <div class="control">
            <input
              class="input"
              type="text"
              name="name"
              required
              placeholder="Text input">
          </div>
        </div>

        <div class="field">
          <label class="label">E-Mail</label>
          <div class="control">
            <input
              class="input"
              type="email"
              name="email"
              required
              placeholder="E-Mail">
          </div>
        </div>

        <br>

        <div class="buttons">
          <button class="button is-primary">Confirm</button>
          <a class="button is-link" href="/c/new">Reset</a>
        </div>

      </form>
    </div>
  </section>
</body>
</html>
